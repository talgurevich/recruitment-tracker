generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                @id @default(uuid())
  email                String                @unique
  password             String
  name                 String
  excitementWeights    Json?                 @default("{\"salary\": 0.35, \"workLife\": 0.25, \"growth\": 0.15, \"culture\": 0.10, \"role\": 0.08, \"location\": 0.05, \"stability\": 0.02}")
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  recruitmentProcesses RecruitmentProcess[]
}

model RecruitmentProcess {
  id              String       @id @default(uuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyName     String
  position        String
  status          Status       @default(APPLIED)
  contactEmail    String?
  contactPhone    String?
  contactName     String?
  rejectionReason String?
  rejectionDate   DateTime?
  notes           String?
  appliedDate     DateTime     @default(now())
  lastContactDate DateTime?
  salaryRange     String?
  location        String?
  jobType         JobType      @default(FULL_TIME)
  source          String?
  excitementRating Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  actionItems     ActionItem[]
}

model ActionItem {
  id                   String             @id @default(uuid())
  processId            String
  recruitmentProcess   RecruitmentProcess @relation(fields: [processId], references: [id], onDelete: Cascade)
  title                String
  description          String?
  dueDate              DateTime?
  completed            Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}

enum Status {
  APPLIED
  SCREENING
  INTERVIEW
  OFFER
  REJECTED
  WITHDRAWN
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  FREELANCE
}
